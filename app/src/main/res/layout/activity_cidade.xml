<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.poli.timecities.Cidade">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cidade"
        android:textSize="50px"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMax"
        android:text="@string/tMaxima"
        android:textSize="30px"
        android:layout_below="@+id/cidade"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempMaxima"
        android:textSize="30px"
        android:layout_alignBaseline="@id/textMax"
        android:layout_toRightOf="@id/textMax"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMin"
        android:text="@string/tMinima"
        android:textSize="30px"
        android:layout_below="@+id/textMax"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempMinima"
        android:textSize="30px"
        android:layout_alignBaseline="@id/textMin"
        android:layout_toRightOf="@id/textMin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:gravity="center"
        android:layout_below="@+id/textMin"/>

</RelativeLayout>
